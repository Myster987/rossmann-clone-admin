{
	"name": "rossmann-clone-node",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"db:generate": "drizzle-kit generate --config=./src/lib/db/drizzle.config.ts",
		"db:migrate": "node ./src/lib/db/migrate.ts",
		"db:studio": "drizzle-kit studio --config=./src/lib/db/drizzle.config.ts",
		"db:push": "drizzle-kit push --config=./src/lib/db/drizzle.config.ts",
		"db:local": "turso dev -f ../db/local.db",
		"dev": "vite dev",
		"dev-shop": "cd ../ && cd rossmann-clone-shop && pnpm run dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^3.2.1",
		"@sveltejs/adapter-vercel": "^5.3.1",
		"@sveltejs/kit": "^2.5.10",
		"@sveltejs/vite-plugin-svelte": "^3.1.1",
		"@types/eslint": "^8.56.10",
		"@typescript-eslint/eslint-plugin": "^7.11.0",
		"@typescript-eslint/parser": "^7.11.0",
		"autoprefixer": "^10.4.19",
		"drizzle-kit": "^0.21.4",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.39.0",
		"postcss": "^8.4.38",
		"postcss-load-config": "^5.1.0",
		"prettier": "^3.3.0",
		"prettier-plugin-svelte": "^3.2.3",
		"prettier-plugin-tailwindcss": "^0.5.14",
		"svelte": "^4.2.17",
		"svelte-check": "^3.8.0",
		"svelte-headless-table": "^0.18.2",
		"tailwindcss": "^3.4.3",
		"tslib": "^2.6.2",
		"typescript": "^5.4.5",
		"vite": "^5.2.12"
	},
	"type": "module",
	"dependencies": {
		"@hono/zod-validator": "^0.2.2",
		"@libsql/client": "^0.6.2",
		"@lucia-auth/adapter-drizzle": "^1.0.7",
		"bits-ui": "^0.21.10",
		"cloudinary": "^2.2.0",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.30.10",
		"formsnap": "^1.0.0",
		"hono": "^4.4.2",
		"lucia": "^3.2.0",
		"lucide-svelte": "^0.376.1",
		"mode-watcher": "^0.3.0",
		"oslo": "^1.2.0",
		"svelte-sonner": "^0.3.24",
		"sveltekit-superforms": "^2.14.0",
		"tailwind-merge": "^2.3.0",
		"tailwind-variants": "^0.2.1",
		"zod": "^3.23.8"
	}
}
